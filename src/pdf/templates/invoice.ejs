<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Invoice #<%= invoice.invoice_number %></title>
  <style>
    body { 
      font-family: Arial, sans-serif; 
      line-height: 1.6; 
      color: #333; 
      margin: 0; 
      padding: 0; 
      background: #f9f9f9;
    }
    .container { 
      max-width: 800px; 
      margin: 30px auto; 
      background: #fff; 
      border: 1px solid #ddd; 
      border-radius: 6px; 
      padding: 30px; 
    }
    .header { 
      display: flex; 
      justify-content: space-between; 
      align-items: center; 
      margin-bottom: 30px; 
      border-bottom: 2px solid #004080; 
      padding-bottom: 15px;
    }
    .logo { max-width: 180px; }
    .header h1 { margin: 0; font-size: 26px; color: #004080; }
    .status {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 4px;
      font-weight: bold;
      text-transform: capitalize;
      font-size: 13px;
    }
    .status-paid { background-color: #d4edda; color: #155724; }
    .status-overdue { background-color: #f8d7da; color: #721c24; }
    .status-pending { background-color: #fff3cd; color: #856404; }
    .invoice-info { margin-bottom: 25px; }
    .invoice-info div { margin-bottom: 5px; }
    .from-to { display: flex; justify-content: space-between; margin-bottom: 30px; }
    .from, .to { width: 48%; }
    .from h3, .to h3 { margin-bottom: 8px; color: #004080; }
    table { 
      width: 100%; 
      border-collapse: collapse; 
      margin-bottom: 25px;
    }
    th, td { 
      border: 1px solid #ddd; 
      padding: 10px; 
      text-align: left; 
      font-size: 14px;
    }
    th { 
      background-color: #f2f6fa; 
      font-weight: bold; 
      color: #004080;
    }
    .totals { 
      float: right; 
      width: 320px; 
      margin-top: 10px;
    }
    .totals table td { border: none; padding: 6px 8px; }
    .totals tr td:first-child { font-weight: bold; color: #333; }
    .totals tr:last-child td { font-size: 16px; font-weight: bold; color: #004080; }
    .footer { 
      margin-top: 50px; 
      text-align: center; 
      color: #777; 
      font-size: 0.9em;
      border-top: 1px solid #ddd;
      padding-top: 15px;
    }
  </style>
</head>
<body>
  <div class="container">
    
    <!-- Header -->
    <div class="header">
      <div>
        <h1>INVOICE</h1>
        <div class="status status-<%= invoice.status %>">
          <%= (invoice.status || '').replace('_', ' ') %>
        </div>
      </div>
      <div style="text-align: right;">
        <div style="font-size: 1.3em; font-weight: bold; margin-bottom: 8px;">
          <%= invoice.portfolio?.name || 'Lease Director' %>
        </div>
        <% if (invoice.portfolio?.address) { %><div><%= invoice.portfolio.address %></div><% } %>
        <% if (invoice.portfolio?.phone) { %><div><%= invoice.portfolio.phone %></div><% } %>
        <% if (invoice.portfolio?.email) { %><div><%= invoice.portfolio.email %></div><% } %>
      </div>
    </div>

    <!-- Invoice Info -->
    <div class="invoice-info">
      <div><strong>Invoice #:</strong> <%= invoice.invoice_number %></div>
      <div><strong>Issue Date:</strong> <%= helpers.formatDate(invoice.issue_date) %></div>
      <% if (invoice.due_date) { %>
        <div><strong>Due Date:</strong> <%= helpers.formatDate(invoice.due_date) %></div>
      <% } %>
    </div>

    <!-- From / To -->
    <div class="from-to">
      <div class="from">
        <h3>From:</h3>
        <div><%= invoice.portfolio?.name || 'Lease Director' %></div>
        <% if (invoice.portfolio?.address) { %><div><%= invoice.portfolio.address %></div><% } %>
        <% if (invoice.portfolio?.phone) { %><div><%= invoice.portfolio.phone %></div><% } %>
        <% if (invoice.portfolio?.email) { %><div><%= invoice.portfolio.email %></div><% } %>
      </div>
      <div class="to">
        <h3>To (Tenant):</h3>
        <div><%= invoice.lease?.tenant_name || 'Tenant' %></div>
        <% if (invoice.lease?.property_address) { %><div><%= invoice.lease.property_address %></div><% } %>
        <% if (invoice.lease?.tenant_email) { %><div><%= invoice.lease.tenant_email %></div><% } %>
        <% if (invoice.lease?.tenant_phone) { %><div><%= invoice.lease.tenant_phone %></div><% } %>
      </div>
    </div>

    <!-- Items -->
    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>Description</th>
          <th>Qty</th>
          <th>Unit Price</th>
          <th>Tax</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% (invoice.items || []).forEach(function(item) { %>
          <tr>
            <td><%= item.name || '' %></td>
            <td><%= item.description || '' %></td>
            <td><%= item.qty || 1 %></td>
            <td><%= currencySymbol %><%= (item.unit_price || 0).toFixed(2) %></td>
            <td><%= item.tax_rate ? (item.tax_rate + '%') : '-' %></td>
            <td><%= currencySymbol %><%= (item.amount || 0).toFixed(2) %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <!-- Totals -->
    <div class="totals">
      <table>
        <tr>
          <td>Subtotal:</td>
          <td><%= currencySymbol %><%= totals.subtotal.toFixed(2) %></td>
        </tr>
        <tr>
          <td>Tax:</td>
          <td><%= currencySymbol %><%= totals.taxTotal.toFixed(2) %></td>
        </tr>
        <tr>
          <td>Total:</td>
          <td><%= currencySymbol %><%= totals.total.toFixed(2) %></td>
        </tr>
        <tr>
          <td>Amount Paid:</td>
          <td><%= currencySymbol %><%= totals.amountPaid.toFixed(2) %></td>
        </tr>
        <tr>
          <td>Amount Due:</td>
          <td><%= currencySymbol %><%= totals.amountDue.toFixed(2) %></td>
        </tr>
      </table>
    </div>

    <div style="clear: both;"></div>

    <!-- Footer -->
    <div class="footer">
      <p>Thank you for your business!</p>
      <p>If you have any questions about this invoice, please contact us at <%= supportEmail %></p>
      <p>Invoice generated on <%= helpers.formatDate(new Date()) %></p>
    </div>
  </div>
</body>
</html>
