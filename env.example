# Database Configuration (PostgreSQL) - REQUIRED
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=your_database_name_here
DB_SYNC=true
DB_SSL=false

# JWT Configuration - REQUIRED
JWT_ACCESS_SECRET=replace-with-strong-random-secret
JWT_ACCESS_EXPIRES_IN=15m

# CSRF Configuration - OPTIONAL
CSRF_SECRET=your-csrf-secret-key
CSRF_TOKEN_EXPIRY_HOURS=24

# CORS Configuration - OPTIONAL (comma-separated list)
# Examples:
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com
# ALLOWED_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Frontend/Backend domains (dev convenience for cookies)
FRONTEND_DOMAIN=localhost:3000
BACKEND_DOMAIN=localhost:8000

# Cookie configuration for dev Option C (different ports)
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
COOKIE_HTTP_ONLY=true

# Application Configuration
NODE_ENV=development
PORT=8000

# Test Configuration (Optional)
TEST_PASSWORD=testpassword123